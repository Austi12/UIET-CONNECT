generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions")]
}

model User {
  id                 String              @id @default(uuid())
  email              String              @unique
  passwordHash       String              @map("password_hash")
  name               String
  role               UserRole            @default(STUDENT)
  department         String?
  year               Int?
  rollNumber         String?             @unique @map("roll_number")
  phoneNumber        String?             @map("phone_number")
  isApproved         Boolean             @default(false) @map("is_approved")
  isActive           Boolean             @default(true) @map("is_active")
  profileImage       String?             @map("profile_image")
  createdAt          DateTime            @default(now()) @map("created_at")
  updatedAt          DateTime            @updatedAt @map("updated_at")
  chatMessages       ChatMessage[]
  classroomLogs      ClassroomLog[]
  eventRegistrations EventRegistration[]
  createdEvents      Event[]             @relation("EventCreator")
  foundItems         FoundItem[]
  lostItems          LostItem[]
  projects           Project[]
  sessions           Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Classroom {
  id          String          @id @default(uuid())
  name        String
  building    String
  floor       Int
  capacity    Int
  status      ClassroomStatus @default(FREE)
  features    String[]
  description String?
  imageUrl    String?         @map("image_url")
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")
  logs        ClassroomLog[]

  @@map("classrooms")
}

model ClassroomLog {
  id             String          @id @default(uuid())
  classroomId    String          @map("classroom_id")
  userId         String          @map("user_id")
  previousStatus ClassroomStatus @map("previous_status")
  newStatus      ClassroomStatus @map("new_status")
  reason         String?
  createdAt      DateTime        @default(now()) @map("created_at")
  classroom      Classroom       @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  user           User            @relation(fields: [userId], references: [id])

  @@map("classroom_logs")
}

model LostItem {
  id          String         @id @default(uuid())
  userId      String         @map("user_id")
  title       String
  description String
  category    String
  location    String
  lostDate    DateTime       @map("lost_date")
  status      ItemStatus     @default(ACTIVE)
  imageUrl    String         @map("image_url")
  contactInfo String?        @map("contact_info")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  embedding   ItemEmbedding? @relation("LostItemEmbedding")
  user        User           @relation(fields: [userId], references: [id])

  @@map("lost_items")
}

model FoundItem {
  id          String         @id @default(uuid())
  userId      String         @map("user_id")
  title       String
  description String
  category    String
  location    String
  foundDate   DateTime       @map("found_date")
  status      ItemStatus     @default(ACTIVE)
  imageUrl    String         @map("image_url")
  contactInfo String?        @map("contact_info")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  embedding   ItemEmbedding? @relation("FoundItemEmbedding")
  user        User           @relation(fields: [userId], references: [id])

  @@map("found_items")
}

model ItemEmbedding {
  id          String     @id @default(uuid())
  lostItemId  String?    @unique
  foundItemId String?    @unique
  createdAt   DateTime   @default(now())
  foundItem   FoundItem? @relation("FoundItemEmbedding", fields: [foundItemId], references: [id], onDelete: Cascade)
  lostItem    LostItem?  @relation("LostItemEmbedding", fields: [lostItemId], references: [id], onDelete: Cascade)
}

model Project {
  id          String        @id @default(uuid())
  userId      String        @map("user_id")
  title       String
  description String
  techStack   String[]      @map("tech_stack")
  githubUrl   String?       @map("github_url")
  liveUrl     String?       @map("live_url")
  imageUrl    String?       @map("image_url")
  status      ProjectStatus @default(DRAFT)
  featured    Boolean       @default(false)
  likes       Int           @default(0)
  views       Int           @default(0)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  user        User          @relation(fields: [userId], references: [id])

  @@map("projects")
}

model Event {
  id                   String              @id @default(uuid())
  title                String
  description          String
  organizer            String
  creatorId            String              @map("creator_id")
  eventDate            DateTime            @map("event_date")
  endDate              DateTime?           @map("end_date")
  location             String
  venue                String?
  maxCapacity          Int?                @map("max_capacity")
  imageUrl             String?             @map("image_url")
  category             String
  isPublished          Boolean             @default(false) @map("is_published")
  registrationDeadline DateTime?           @map("registration_deadline")
  createdAt            DateTime            @default(now()) @map("created_at")
  updatedAt            DateTime            @updatedAt @map("updated_at")
  registrations        EventRegistration[]
  creator              User                @relation("EventCreator", fields: [creatorId], references: [id])

  @@map("events")
}

model EventRegistration {
  id        String   @id @default(uuid())
  eventId   String   @map("event_id")
  userId    String   @map("user_id")
  status    String   @default("registered")
  createdAt DateTime @default(now()) @map("created_at")
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
  @@map("event_registrations")
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  message   String
  response  String
  context   Json?
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id])

  @@map("chat_messages")
}

model SystemConfig {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_config")
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

enum ClassroomStatus {
  FREE
  OCCUPIED
  RESERVED
}

enum ProjectStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

enum ItemStatus {
  ACTIVE
  CLAIMED
  EXPIRED
}
